<div>
	<% if flash[:notice] %>
		<div class="alert bg-success">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= flash[:notice] %>
		</div>
	<% end %>

	<% if flash[:alert] %>
		<div class="alert bg-danger">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= flash[:alert] %>
		</div>
	<% end %>

	<% if flash[:error] %>
		<div class="alert bg-danger">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= flash[:error] %>
		</div>
	<% end %>
</div>